<%- include("./partials/header.ejs") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=note.title%></div>
    <form class="ui form" action="/notes/<%=note._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="note[title]" value="<%=note.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="note[image]" value="<%=note.image%>">
        </div>
        <div class="field">
            <label>Note Content</label>
            <textarea name="note[body]"><%=note.body%></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
  
 <%- include("./partials/footer.ejs") %>